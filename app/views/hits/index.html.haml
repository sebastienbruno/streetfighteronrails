%h1 Listing hits

%table
  %thead
    %tr
      %th Damage point
      %th
      %th
      %th

  %tbody
    - @hits.each do |hit|
      %tr
        %td= hit.damage_point
        %td= link_to 'Show', hit
        %td= link_to 'Edit', edit_hit_path(hit)
        %td= link_to 'Destroy', hit, method: :delete, data: { confirm: 'Are you sure?' }

